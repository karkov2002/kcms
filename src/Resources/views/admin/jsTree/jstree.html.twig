<div class="container-fluid jstree">
    <div id="data-context" data-context="{{ context|json_encode }}"></div>
    <div class="row">
        <div class="col-md-4 col-sm-8 col-xs-8">
            <button type="button" class="btn btn-success btn-sm" id="jstree_create"><i class="glyphicon glyphicon-asterisk"></i> Create new content</button>
            <button type="button" class="btn btn-warning btn-sm" id="jstree_rename"><i class="glyphicon glyphicon-pencil"></i> Rename</button>
            <button type="button" class="btn btn-danger btn-sm" id="jstree_delete"><i class="glyphicon glyphicon-remove"></i> Delete</button>
        </div>
        <div class="col-md-2 col-sm-4 col-xs-4" style="text-align:right;">
            <input type="text" value="" style="box-shadow:inset 0 0 4px #eee; width:120px; margin:0; padding:6px 12px; border-radius:4px; border:1px solid silver; font-size:1.1em;" id="jstree_search" placeholder="Search">
        </div>
    </div>
    <div class="row">
        <div id="jstree"></div>
    </div>
</div>